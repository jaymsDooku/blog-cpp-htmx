<div class="posts">
    <h2>Posts</h2>
    {{#posts}}
        <div class="post" hx-get="/post/{{id}}" hx-target="#content" hx-headers='{"htmx":"true"}' hx-push-url="true">
            <p>{{creation_date}}</p>
            <h3>{{title}}</h3>
        </div>
    {{/posts}}
    {{^posts}}
        <p>No Posts. :(</p>
    {{/posts}}
</div>